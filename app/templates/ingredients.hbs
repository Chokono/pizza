
{{outlet}}
<footer>
  {{#let (get this.model "lastObject") as |pizza|}}
    {{#if (get pizza "exist")}}
      <div class="pizzaContains">
        <p>Pizza is cooked.</p>
        <p>Size: {{get pizza "size"}}</p>
        <p>Stuffing: {{#each (get pizza "stuffing") as |stuffing|}}{{stuffing}}, {{/each}}</p>
        <p>Topping: {{#each (get pizza "topping") as |topping|}}{{topping}}, {{/each}}</p>
        <p>Price: {{get pizza "price"}}$</p>
        <p>Calories: {{get pizza "calories"}}kcal</p>
      </div>
    {{/if}}
  {{/let}}
</footer>